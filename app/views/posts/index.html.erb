<p id="notice"><%= notice %></p>

<h1>Posts</h1>
Our blog has <%= Post.public_count %> posts and counting!
<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.firstname %></td>
        <td><%= post.lastname %></td>
        <td><%= post.email %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<ul>
  <% @posts.each do |post| %>
    <% unless post.archived? %>
      <li>
        <%= link_to post.email, post %>
      </li>
    <% end %>
  <% end %>
</ul>

